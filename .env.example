# Database Configuration
POSTGRES_DB=clio
POSTGRES_USER=clio
POSTGRES_PASSWORD=clio_password
DATABASE_URL=postgresql://clio:clio_password@postgres:5432/clio
DB_MAX_CONNECTIONS=10
DB_ACQUIRE_TIMEOUT_SECONDS=3

# Redis Configuration
REDIS_URL=redis://redis:6379

# Core Service Ports
SEARCHER_PORT=3001
INDEXER_PORT=3002
AI_SERVICE_PORT=3003
WEB_PORT=3000

# Connector Service Ports
GOOGLE_CONNECTOR_PORT=4001
SLACK_CONNECTOR_PORT=4002
ATLASSIAN_CONNECTOR_PORT=4003

# Service URLs (for inter-service communication)
SEARCHER_URL=http://searcher:3001
INDEXER_URL=http://indexer:3002
AI_SERVICE_URL=http://ai:3003

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production
SESSION_COOKIE_NAME=auth-session
SESSION_DURATION_DAYS=7

# Application Configuration
PUBLIC_APP_URL=http://localhost:3000
CLIO_DOMAIN=localhost

# Google Workspace Connector
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Slack Connector
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_BOT_TOKEN=your-slack-bot-token

# Atlassian Connector
ATLASSIAN_CLIENT_ID=your-atlassian-client-id
ATLASSIAN_CLIENT_SECRET=your-atlassian-client-secret

# Logging
RUST_LOG=info

# AI Service Configuration
MODEL_PATH=/models
EMBEDDING_MODEL=intfloat/e5-large-v2
EMBEDDING_DIMENSIONS=1024

# vLLM Configuration
VLLM_URL=http://vllm:8000
VLLM_PORT=8000
VLLM_MODEL=microsoft/Phi-3-mini-4k-instruct
VLLM_DTYPE=auto
VLLM_API_KEY=token-abc123
VLLM_MAX_MODEL_LEN=2048
CUDA_VISIBLE_DEVICES=0
